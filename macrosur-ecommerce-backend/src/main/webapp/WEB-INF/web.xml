<?xml version="1.0" encoding="UTF-8"?>
<!--
  =====================================================
  WEB.XML - Descriptor de Despliegue Web
  =====================================================
  
  Configuración JavaEE tradicional para Servlets, Filters, JSF, etc.
  Integración Spring Boot + JSF requiere este archivo
-->
<web-app 
    xmlns="https://jakarta.ee/xml/ns/jakartaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee 
                        https://jakarta.ee/xml/ns/jakartaee/web-app_5_0.xsd"
    version="5.0">

    <display-name>Macrosur E-Commerce Application</display-name>
    <description>
        Aplicación e-commerce híbrida con Spring Boot + JSF + React
        Demuestra integración de tecnologías modernas y tradicionales
    </description>

    <!-- ========================================== -->
    <!--  CONTEXT PARAMETERS                        -->
    <!-- ========================================== -->
    
    <!-- JSF: Project Stage (Development/Production) -->
    <context-param>
        <param-name>jakarta.faces.PROJECT_STAGE</param-name>
        <param-value>Development</param-value>
        <!-- Cambiar a Production en producción -->
    </context-param>

    <!-- JSF: State Saving Method (client/server) -->
    <context-param>
        <param-name>jakarta.faces.STATE_SAVING_METHOD</param-name>
        <param-value>server</param-value>
    </context-param>

    <!-- JSF: Interpret empty string as null -->
    <context-param>
        <param-name>jakarta.faces.INTERPRET_EMPTY_STRING_SUBMITTED_VALUES_AS_NULL</param-name>
        <param-value>true</param-value>
    </context-param>

    <!-- JSF: Enable partial state saving -->
    <context-param>
        <param-name>jakarta.faces.PARTIAL_STATE_SAVING</param-name>
        <param-value>true</param-value>
    </context-param>

    <!-- PrimeFaces: Theme -->
    <context-param>
        <param-name>primefaces.THEME</param-name>
        <param-value>saga</param-value>
        <!-- Opciones: nova-light, nova-dark, saga, vela, arya, etc. -->
    </context-param>

    <!-- PrimeFaces: Font Awesome -->
    <context-param>
        <param-name>primefaces.FONT_AWESOME</param-name>
        <param-value>true</param-value>
    </context-param>

    <!-- PrimeFaces: Client Side Validation -->
    <context-param>
        <param-name>primefaces.CLIENT_SIDE_VALIDATION</param-name>
        <param-value>true</param-value>
    </context-param>

    <!-- PrimeFaces: File Upload Mode (auto, native) -->
    <context-param>
        <param-name>primefaces.UPLOADER</param-name>
        <param-value>auto</param-value>
    </context-param>

    <!-- BootFaces: Usar Bootstrap CSS de BootFaces -->
    <context-param>
        <param-name>net.bootsfaces.get_bootstrap_from_cdn</param-name>
        <param-value>false</param-value>
    </context-param>

    <!-- OmniFaces: Cache provider -->
    <context-param>
        <param-name>org.omnifaces.CACHE_PROVIDER</param-name>
        <param-value>org.omnifaces.cdi.cache.CacheProvider</param-value>
    </context-param>

    <!-- ========================================== -->
    <!--  JSF SERVLET (FacesServlet)                -->
    <!-- ========================================== -->
    
    <servlet>
        <servlet-name>Faces Servlet</servlet-name>
        <servlet-class>jakarta.faces.webapp.FacesServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
        <enabled>true</enabled>
    </servlet>

    <servlet-mapping>
        <servlet-name>Faces Servlet</servlet-name>
        <url-pattern>*.xhtml</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>Faces Servlet</servlet-name>
        <url-pattern>/faces/*</url-pattern>
    </servlet-mapping>

    <!-- ========================================== -->
    <!--  FILTERS (Filtros HTTP)                    -->
    <!-- ========================================== -->
    
    <!-- Character Encoding Filter -->
    <filter>
        <filter-name>CharacterEncodingFilter</filter-name>
        <filter-class>org.springframework.web.filter.CharacterEncodingFilter</filter-class>
        <init-param>
            <param-name>encoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
        <init-param>
            <param-name>forceEncoding</param-name>
            <param-value>true</param-value>
        </init-param>
    </filter>
    
    <filter-mapping>
        <filter-name>CharacterEncodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <!-- Spring Security Filter (si se usa) -->
    <!--
    <filter>
        <filter-name>springSecurityFilterChain</filter-name>
